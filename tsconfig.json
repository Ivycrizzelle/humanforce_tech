{
    "extends": "../../tsconfig.base.json", 
    "compilerOptions": {
      "module": "commonjs",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitOverride": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "types": ["node"]
    },
    "include": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.d.ts",
      "**/reporters/*.ts",
      "lib/**/*.ts"
 ]
  }